
html
head
	title Product
body
	include ../public/partials/loggedinHeader
div#main
	br
	p #{product.title}
	form(method='POST' action='/products/'+product._id+'/add')
				img(src=product.imgPath alt='img' style='width:100px; height:100px;')
				p price: $#{product.price}
				p genres: #{product.genre}
				p stock: #{product.stock}
				p Description: ...soon
				p Book Reviews: ...soon
				input(type='hidden', name='_id', value=product._id)
				input(type='submit', name='submit', value='add to cart')
	form(method='POST' action='/products/'+product._id+'/review')
		label(for ='Create') Add a review for this item
		br
		p #{alert}
		input(type = 'text', name = 'review', required=true)
		br
		input(type = 'submit', name='submit',value='Add')
		br 
	br